import re
import tkinter as tk
from tkinter import messagebox

#Function to check password strength
def check_password_strenght():
    password = entry.get()

    #Regex rules
    length_regex = r'.{9,}'
    upper_regex = r'[A-Z]'
    lower_regex = r'[a-z]'
    number_regex = r'\d'
    unique_regex = r'[!@#$%^&+-]'

    #conditions list
    conditions = [
        (length_regex, "at least 9 cxharacters long")
        (upper_regex, "contains at least one uppercase letter")
        (lower_regex, "contains at least one lovercase letter")
        (number_regex, "contain at least one digit")
        (unique_regex, "contain at least one special character(!@#$%^&+-)")
    ]

    #Track unmet conditions
    unmet = [desc for regex, desc in conditions if not re.search(regex, password)]

    #procide feedback
    if not unmet:
        result_label.config(text="✅ Strong Password!", fg="green")
    else:
        feedback = "❌ Weak Password: \nMust " + "\n- ".join(unmet)
        result_label.config(text=feedback, fg="red")

#GUI Window
window = tk.Tk()
window.title("Password Checker Strenght")
window.geometry("400x250")

#UI widgets
label = tk.Label(window, text="Enter your password: ", font=("Arial", 12))
label.pack(pady=10)

entry = tk.Entry(window, show="*", width=30, font=("Arial", 12))
entry.pack(pady=5)

check_button = tk.Button(window, text="Check Strength", command=check_password_strenght, font=("Arial", 12))
check_button.pack(pady=10)

result_label = tk.Label(window, text="", font=("Arial", 11), wraplength=350, justify="left")
result_label.pack(pady=10)

#Run app
window.mainloop()
